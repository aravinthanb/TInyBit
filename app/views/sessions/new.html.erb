
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">


  <%= form_tag sessions_path do %>
  <form class="form-signin">
    <h1 class="text-center login-title">Please sign in</h1>
    <label for="username" class="sr-only">Username</label>
    <input name="username" type="text_field" id="username" class="form-control" placeholder="Username" required autofocus>
    <br>
    <label for="password" class="sr-only">Password</label>
    <input name="password" type="password" id="password" class="form-control" placeholder="Password" required>
    <br>
    <%= button_tag(type: "submit", class: "btn btn-lg btn-primary btn-block") do %>
    Log In <i class="icon-repeat"></i>
    <% end %>
  </form>
  <% end %>
  </div>
  </div>
</div>
