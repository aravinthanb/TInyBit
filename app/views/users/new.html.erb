<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
  <%= form_for @user do |f| %>
  <form class="form-signin">
    <h1 class="text-center login-title">Sign Up</h1>
    <label for="user_username" class="sr-only">Username</label>
    <input name="user[username]" type="text_field" id="user_username" class="form-control" placeholder="Username" required autofocus>
    <br>
    <label for="user_password" class="sr-only">Password</label>
    <input name="user[password]" type="password" id="user[password]" class="form-control" placeholder="Password" required>
    <br>
    <label for="user_password_confirmation" class="sr-only">Password</label>
    <input name="user[password_confirmation]" type="password" id="user[password_confirmation]" class="form-control" placeholder="Password Confirmation" required>
    <br>
    <%= button_tag(type: "submit", class: "btn btn-lg btn-primary btn-block",name:"commit") do %>
    Log In <i class="icon-repeat"></i>
    <% end %>
  </form>
  <% end %>
  </div>
  </div>
</div>
